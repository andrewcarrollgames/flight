{
    "version": 6,
    "configurePresets": [{
            "name": "base",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "PLATFORM_BACKEND": "SDL",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }, {
            "name": "windows-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        }, {
            "name": "linux-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }, {
            "name": "macos-base",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }, {
            "name": "emscripten-base",
            "hidden": true,
            "inherits": "base",
            "generator": "Ninja",
            "condition": {
                "type": "notEquals",
                "lhs": "$env{EMSDK}",
                "rhs": ""
            },
            "toolchainFile": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
            "cacheVariables": {
                "PLATFORM_BACKEND": "SDL"
            }
        }, {
            "name": "debug",
            "hidden": true,
            "displayName": "Debug",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/debug/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/debug/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/debug/bin",
                "ENABLE_GAME_AS_PLUGIN": "OFF",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight_debug"
            }
        }, {
            "name": "debug-hotreload",
            "hidden": true,
            "displayName": "Debug with Hot Reload",
            "binaryDir": "${sourceDir}/build/debug-hotreload",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/debug-hotreload/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/debug-hotreload/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/debug-hotreload/bin",
                "ENABLE_GAME_AS_PLUGIN": "OFF",
                "ENABLE_HOT_RELOAD": "ON",
                "EXECUTABLE_NAME": "flight_debug_hr"
            }
        }, {
            "name": "release",
            "hidden": true,
            "displayName": "Release",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/release/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/release/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/release/bin",
                "ENABLE_GAME_AS_PLUGIN": "OFF",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight"
            }
        }, {
            "name": "relwithdebinfo",
            "hidden": true,
            "displayName": "Release with Debug Info",
            "binaryDir": "${sourceDir}/build/relwithdebinfo",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/relwithdebinfo/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/relwithdebinfo/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/relwithdebinfo/bin",
                "ENABLE_GAME_AS_PLUGIN": "OFF",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight_dev"
            }
        }, {
            "name": "minsizerel",
            "hidden": true,
            "displayName": "Minimum Size Release",
            "binaryDir": "${sourceDir}/build/minsizerel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/minsizerel/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/minsizerel/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/minsizerel/bin",
                "ENABLE_GAME_AS_PLUGIN": "OFF",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight"
            }
        }, {
            "name": "windows-debug",
            "displayName": "Windows Debug",
            "inherits": ["windows-base", "debug"]
        }, {
            "name": "windows-debug-hotreload",
            "displayName": "Windows Debug (Hot Reload)",
            "inherits": ["windows-base", "debug-hotreload"]
        }, {
            "name": "windows-release",
            "displayName": "Windows Release",
            "inherits": ["windows-base", "release"]
        }, {
            "name": "windows-relwithdebinfo",
            "displayName": "Windows Dev",
            "inherits": ["windows-base", "relwithdebinfo"]
        }, {
            "name": "windows-minsizerel",
            "displayName": "Windows MinSizeRel",
            "inherits": ["windows-base", "minsizerel"]
        }, {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "inherits": ["linux-base", "debug"]
        }, {
            "name": "linux-debug-hotreload",
            "displayName": "Linux Debug (Hot Reload)",
            "inherits": ["linux-base", "debug-hotreload"]
        }, {
            "name": "linux-release",
            "displayName": "Linux Release",
            "inherits": ["linux-base", "release"]
        }, {
            "name": "linux-relwithdebinfo",
            "displayName": "Linux Dev",
            "inherits": ["linux-base", "relwithdebinfo"]
        }, {
            "name": "linux-minsizerel",
            "displayName": "Linux MinSizeRel",
            "inherits": ["linux-base", "minsizerel"]
        }, {
            "name": "macos-debug",
            "displayName": "macOS Debug",
            "inherits": ["macos-base", "debug"]
        }, {
            "name": "macos-debug-hotreload",
            "displayName": "macOS Debug (Hot Reload)",
            "inherits": ["macos-base", "debug-hotreload"]
        }, {
            "name": "macos-release",
            "displayName": "macOS Release",
            "inherits": ["macos-base", "release"]
        }, {
            "name": "macos-relwithdebinfo",
            "displayName": "macOS Dev",
            "inherits": ["macos-base", "relwithdebinfo"]
        }, {
            "name": "macos-minsizerel",
            "displayName": "macOS MinSizeRel",
            "inherits": ["macos-base", "minsizerel"]
        }, {
            "name": "emscripten-debug",
            "displayName": "Emscripten Debug",
            "inherits": ["emscripten-base"],
            "binaryDir": "${sourceDir}/build/emscripten-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-debug/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-debug/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-debug/bin",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight_debug"
            }
        }, {
            "name": "emscripten-release",
            "displayName": "Emscripten Release",
            "inherits": ["emscripten-base"],
            "binaryDir": "${sourceDir}/build/emscripten-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-release/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-release/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-release/bin",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight"
            }
        }, {
            "name": "emscripten-minsizerel",
            "displayName": "Emscripten MinSizeRel",
            "inherits": ["emscripten-base"],
            "binaryDir": "${sourceDir}/build/emscripten-minsizerel",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-minsizerel/bin",
                "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-minsizerel/bin",
                "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/emscripten-minsizerel/bin",
                "ENABLE_HOT_RELOAD": "OFF",
                "EXECUTABLE_NAME": "flight"
            }
        }
    ],
    "buildPresets": [{
            "name": "build-windows-debug",
            "displayName": "Windows Debug Build",
            "configurePreset": "windows-debug",
            "configuration": "Debug"
        }, {
            "name": "build-windows-debug-hotreload",
            "displayName": "Windows Debug Build - Hot Reload",
            "configurePreset": "windows-debug-hotreload",
            "configuration": "Debug"
        },{
            "name": "build-windows-release",
